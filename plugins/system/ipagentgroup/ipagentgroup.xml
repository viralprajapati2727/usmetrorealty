<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
	<name>System - IProperty Agent Groups</name>
	<author>The Thinkery</author>
	<creationDate>June 2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>Adds or removes a Joomla user group to users who are linked to valid IProperty agents or super agents. This works in the background only when the user is logged in.</description>
	<files>
		<filename plugin="ipagentgroup">ipagentgroup.php</filename>
        <filename>index.html</filename>
	</files>
    <languages>
        <language tag="en-GB">en-GB.plg_system_ipagentgroup.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="agentgroup" type="usergroup" default="" label="PLG_IP_AGENTGROUP_GROUP" description="PLG_IP_AGENTGROUP_GROUP_DESC">
                    <option value="" />
                </field>
                <field name="super_agentgroup" type="usergroup" default="" label="PLG_IP_AGENTGROUP_SUPER_GROUP" description="PLG_IP_AGENTGROUP_SUPER_GROUP_DESC">
                    <option value="" />
                </field>
            </fieldset>
        </fields>
    </config>
</extension>