<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
	<name>IProperty - Facebook Share</name>
	<author>The Thinkery</author>
	<creationDate>April 2015</creationDate>
	<copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>Intellectual Property Facebook Share Plugin</description>
	<files>
		<filename plugin="fbshare">fbshare.php</filename>
        <filename>index.html</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_fbshare.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="position" type="list" default="bottom" label="PLG_IP_FBSHARE_POSITION_LABEL" description="PLG_IP_FBSHARE_POSITION_DESC">
                    <option value="top">PLG_IP_FBSHARE_TOP</option>
                    <option value="bottom">PLG_IP_FBSHARE_BOTTOM</option>
                </field>
                <field name="appid" type="text" default="" label="PLG_IP_FBSHARE_APPID_LABEL" description="PLG_IP_FBSHARE_APPID_DESC" size="10" />
             </fieldset>
         </fields>
     </config>
</extension>
