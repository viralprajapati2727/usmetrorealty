<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE iproperty [
<!ENTITY reg "&#174;">
]>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
	<name>IProperty - Walk Score Plugin (Form Position)</name>
	<author>The Thinkery</author>
	<creationDate>June 2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>Walk Score API plugin (Form Position). Note: Walk Score is only available in some areas and may not work for your location.</description>
	<files>
		<filename plugin="walkscoreform">walkscoreform.php</filename>
        <filename>index.html</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_walkscoreform.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="tabtitle" type="text" default="Walk Score&#174;" label="PLG_IP_WS_TABTITLE_LABEL" description="PLG_IP_WS_TABTITLE_DESC" />
                <field name="position" type="radio" class="btn-group" default="1" label="PLG_IP_WS_POSITION_LABEL" description="PLG_IP_WS_POSITION_DESC">
				  <option value="0">PLG_IP_WS_BEFORE</option>
				  <option value="1">PLG_IP_WS_AFTER</option>
				</field>
                <field name="walkscore-id" type="text" default="" label="WS-ID" description="PLG_IP_WS_ID_DESC" />
                <field name="width" type="text" default="750" label="PLG_IP_WS_WIDTH_LABEL" description="PLG_IP_WS_WIDTH_DESC" />
                <field name="height" type="text" default="280" label="PLG_IP_WS_HEIGHT_LABEL" description="PLG_IP_WS_HEIGHT_DESC" />
                <field name="unit" type="list" default="mi" label="PLG_IP_WS_UNIT_LABEL" description="PLG_IP_WS_UNIT_DESC" >
                    <option value="mi">PLG_IP_WS_MILE</option>
                    <option value="km">PLG_IP_WS_KM</option>
                </field>
                <field name="wslayout" type="list" default="horizontal" label="PLG_IP_WS_LAYOUT_LABEL" description="PLG_IP_WS_LAYOUT_DESC" >
                    <option value="vertical">PLG_IP_WS_VERTICAL</option>
                    <option value="horizontal">PLG_IP_WS_HORIZONTAL</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
