<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
	<name>IProperty - Favorite Tools</name>
	<author>The Thinkery</author>
	<creationDate>June 2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>Displays a tabbed toolkit at the bottom of the user favorites page.</description>
	<files>
		<filename plugin="favoritetools">favoritetools.php</filename>
        <filename>index.html</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_favoritetools.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_iproperty/models/fields">
                <field name="" type="header" default="PLG_IP_FT_INQUIRE_ALL" label="" description="" />
                <field name="fi_enabled" type="radio" class="btn-group" default="1" label="PLG_IP_FT_ENABLE_LABEL" description="PLG_IP_FT_ENABLE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="use_realname" type="radio" class="btn-group" default="1" label="PLG_IP_FT_REALNAME_LABEL" description="PLG_IP_FT_REALNAME_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="max_requests" type="text" default="5" label="PLG_IP_FT_MAX_INQUIRIES_LABEL" description="PLG_IP_FT_MAX_INQUIRIES_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>