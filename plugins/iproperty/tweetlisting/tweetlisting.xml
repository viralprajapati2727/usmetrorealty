<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
	<name>IProperty - Tweet Listing</name>
	<author>The Thinkery LLC</author>
	<creationDate>June 2014</creationDate>
	<copyright>Copyright (C) 2014</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>Intellectual Property Tweet New / Updated Property. PLEASE READ THE README.md FILE IN plugins/iproperty/tweetlisting/ BEFORE YOU ATTEMPT TO USE THIS PLUGIN!</description>
	<files>
		<filename plugin="tweetlisting">tweetlisting.php</filename>
        <filename>index.html</filename>
        <filename>README.md</filename>
        <folder>assets</folder>
	</files>
	<languages>
	   <language tag="en-GB">en-GB.plg_iproperty_tweetlisting.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/plugins/iproperty/fblisting/assets">
				<field name="consumer" type="text" default="" label="PLG_IP_TWEETLISTING_CONSUMER_KEY" description="PLG_IP_TWEETLISTING_CONSUMER_KEY_DESC" />
                <field name="csecret" type="text" default="" label="PLG_IP_TWEETLISTING_CONSUMER_SECRET" description="PLG_IP_TWEETLISTING_CONSUMER_SECRET_DESC" />
                <field name="token" type="text" default="" label="PLG_IP_TWEETLISTING_ACCESS_TOKEN" description="PLG_IP_TWEETLISTING_ACCESS_TOKEN_DESC" />
                <field name="asecret" type="text" default="" label="PLG_IP_TWEETLISTING_TOKEN_SECRET" description="PLG_IP_TWEETLISTING_TOKEN_SECRET_DESC" />
                <field name="showimage" type="radio" class="btn-group" default="1" label="PLG_IP_TWEETLISTING_SHOW_IMAGE" description="PLG_IP_TWEETLISTING_SHOW_IMAGE_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="showprice" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_SHOW_PRICE" description="PLG_IP_TWEETLISTING_SHOW_PRICE_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="showbeds" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_SHOW_BEDS" description="PLG_IP_TWEETLISTING_SHOW_BEDS_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="showbaths" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_SHOW_BATHS" description="PLG_IP_TWEETLISTING_SHOW_BATHS_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="showaddress" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_SHOW_ADDRESS" description="PLG_IP_TWEETLISTING_SHOW_ADDRESS_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="showsqft" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_SHOW_SQFT" description="PLG_IP_TWEETLISTING_SHOW_SQFT_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="showreduced" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_SHOW_REDUCED" description="PLG_IP_TWEETLISTING_SHOW_REDUCED_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="showsaletype" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_SHOW_SALETYPE" description="PLG_IP_TWEETLISTING_SHOW_SALETYPE_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="tweetnew" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_TWEET_NEW" description="PLG_IP_TWEETLISTING_TWEET_NEW_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="tweetupdate" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_TWEET_UPDATE" description="PLG_IP_TWEETLISTING_TWEET_UPDATE_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="geocode" type="radio" class="btn-group" default="0" label="PLG_IP_TWEETLISTING_GEOCODE" description="PLG_IP_TWEETLISTING_GEOCODE_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field name="forcelength" type="radio" class="btn-group" default="1" label="PLG_IP_TWEETLISTING_FORCELENGTH" description="PLG_IP_TWEETLISTING_FORCELENGTH_DESC">
                  <option value="0">JNO</option>
                  <option value="1">JYES</option>
                </field>
                <field type="spacer" name="" class="text" label="PLG_IP_TWEETLISTING_BITLYLABEL" />
                <field name="bitlykey" type="text" default="" label="PLG_IP_TWEETLISTING_BITKEY" description="PLG_IP_TWEETLISTING_BITKEY_DESC" />
             </fieldset>
         </fields>
     </config>
</extension>