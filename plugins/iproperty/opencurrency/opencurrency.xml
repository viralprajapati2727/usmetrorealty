<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
	<name>IProperty - Open Exchange Rates Currency Conversion</name>
	<author>The Thinkery</author>
	<creationDate>June 2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>Convert listing price to different currency using Open Exchange Rates API. Account required at https://openexchangerates.org.</description>
	<files>
		<filename plugin="opencurrency">opencurrency.php</filename>
        <filename>index.html</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_opencurrency.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="tabtitle" type="text" default="Convert" label="PLG_IP_OPENCURRENCY_TABTITLE" description="PLG_IP_OPENCURRENCY_TABTITLE_DESC" />
                <field name="appid" type="text" default="App Id" label="PLG_IP_OPENCURRENCY_APPID" description="PLG_IP_OPENCURRENCY_APPID_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>
