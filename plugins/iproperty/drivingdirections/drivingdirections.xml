<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
	<name>IProperty - Driving Directions</name>
	<author>The Thinkery</author>
	<creationDate>June 2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>IProperty driving directions plugin</description>
	<files>
		<filename plugin="drivingdirections">drivingdirections.php</filename>
        <filename>directions.js</filename>
        <filename>index.html</filename>
	</files>
	<languages>
	   <language tag="en-GB">en-GB.plg_iproperty_drivingdirections.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="tabtitle" type="text" default="Get There" label="PLG_IP_DD_TABTITLE_LABEL" description="PLG_IP_DD_TABTITLE_DESC" />
            </fieldset>
            <fieldset name="basic">
                <field name="display_map" type="radio" class="btn-group" default="1" label="PLG_IP_DD_DISPLAYMAP" description="PLG_IP_DD_DISPLAYMAP_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="use_gps" type="radio" class="btn-group" default="1" label="PLG_IP_DD_USEGPS" description="PLG_IP_DD_USEGPS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
