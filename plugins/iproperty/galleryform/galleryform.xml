<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
	<name>IProperty - Gallery Plugin (Form Position)</name>
	<author>The Thinkery</author>
	<creationDate>June 2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>Gallery plugin for Intellectual Property. Displays gallery tab on property details view.</description>
	<files>
		<filename plugin="galleryform">galleryform.php</filename>
        <filename>index.html</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_galleryform.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="tabtitle" type="text" default="Gallery" label="PLG_IP_GALLERY_TABTITLE_LABEL" description="PLG_IP_GALLERY_TABTITLE_DESC" />
                <field name="position" type="radio" class="btn-group" default="1" label="PLG_IP_GALLERY_POSITION_LABEL" description="PLG_IP_GALLERY_POSITION_DESC">
				  <option value="0">PLG_IP_GALLERY_BEFORE</option>
				  <option value="1">PLG_IP_GALLERY_AFTER</option>
				</field>
                <field name="thumb_limit" type="integer" default="0" first="0" last="25" step="1" label="PLG_IP_GALLERY_MAXIMGS_LABEL" description="PLG_IP_GALLERY_MAXIMGS_DESC" />
                <field name="thumb_width" type="text" default="200" label="PLG_IP_GALLERY_WIDTH_LABEL" description="PLG_IP_GALLERY_WIDTH_DESC" />
                <field name="thumb_height" type="text" default="120" label="PLG_IP_GALLERY_HEIGHT_LABEL" description="PLG_IP_GALLERY_HEIGHT_DESC" />
                <field name="include_lbox" type="radio" class="btn-group" default="1" label="PLG_IP_GALLERY_INCLUDE_LIGHTBOX" description="PLG_IP_GALLERY_INCLUDE_LIGHTBOX_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
				</field>
                <field name="lbox_value" type="text" default="ipgalleryslides" label="PLG_IP_GALLERY_LIGHTBOX_VALUE" description="PLG_IP_GALLERY_LIGHTBOX_VALUE_DESC" />                
            </fieldset>
        </fields>
    </config>
</extension>