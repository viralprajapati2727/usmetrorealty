<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
	<name>IProperty - jLike Plugin (Form Position)</name>
	<author>The Thinkery</author>
	<creationDate>June 2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@thethinkery.net</authorEmail>
	<authorUrl>www.thethinkery.net</authorUrl>
	<version>3.3.3</version>
	<description>jLike plugin. Note: JLike is required for this plugin. If you do not have jLike installed, you find more information at techjoomla.com Please install and configure jLike before using this plugin.</description>
	<files>
		<filename plugin="jlike">jlike.php</filename>
        <filename>index.html</filename>
	</files>
    <languages>
	   <language tag="en-GB">en-GB.plg_iproperty_jlike.ini</language>
	</languages>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field name="tabtitle" type="text" default="Comments" label="PLG_IP_JLIKE_TABTITLE_LABEL" description="PLG_IP_JLIKE_TABTITLE_DESC" />
                <field name="show_like_buttons" type="radio" class="btn-group" default="1" label="PLG_IP_JLIKE_SHOW_BUTTONS_LABEL" description="PLG_IP_JLIKE_SHOW_BUTTONS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
				</field>
                <field name="show_comments" type="radio" class="btn-group" default="1" label="PLG_IP_JLIKE_SHOW_COMMENTS_LABEL" description="PLG_IP_JLIKE_SHOW_COMMENTS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
				</field>
                <field name="position" type="radio" class="btn-group" default="1" label="PLG_IP_JLIKE_POSITION_LABEL" description="PLG_IP_JLIKE_POSITION_DESC">
                    <option value="0">PLG_IP_JLIKE_BEFORE</option>
                    <option value="1">PLG_IP_JLIKE_AFTER</option>
				</field>
            </fieldset>
        </fields>
    </config>
</extension>