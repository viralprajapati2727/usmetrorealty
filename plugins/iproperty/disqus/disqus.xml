<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="iproperty" method="upgrade">
    <name>IProperty - Disqus Comment Plugin (Form Position)</name>
    <author>The Thinkery</author>
    <creationDate>January 2015</creationDate>
    <copyright>Copyright (C) 2009 - 2015 The Thinkery LLC. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>info@thethinkery.net</authorEmail>
    <authorUrl>www.thethinkery.net</authorUrl>
    <version>3.3.3</version>
    <description>Disqus Comment plugin (Form Position).</description>
    <files>
        <filename plugin="disqus">disqus.php</filename>
        <filename>index.html</filename>
    </files>
    <languages>
       <language tag="en-GB">en-GB.plg_iproperty_disqus.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="tabtitle" type="text" default="Comments" label="PLG_IP_DISQUS_TABTITLE_LABEL" description="PLG_IP_DISQUS_TABTITLE_DESC" />
				<field name="position" type="radio" class="btn-group" default="1" label="PLG_IP_DISQUS_POSITION_LABEL" description="PLG_IP_DISQUS_POSITION_DESC">
				  <option value="0">PLG_IP_DISQUS_BEFORE</option>
				  <option value="1">PLG_IP_DISQUS_AFTER</option>
				</field>
                <field name="disqus_shortname" type="text" default="" label="PLG_IP_DISQUS_SHORTNAME" description="PLG_IP_DISQUS_SHORTNAME_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>
