<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="edocman" method="upgrade">
	<name>Edocman - Gallery</name>
	<author>Dang Thuc Dam</author>
	<creationDate>July 2018</creationDate>
	<copyright>Ossolution Team</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>services@joomdonation.com</authorEmail>
	<authorUrl>www.joomdonation.com</authorUrl>
	<version>1.9.10</version>  
	<description>This plugin allow adding and displaying gallery for an document.</description>
	<files>
		<filename plugin="gallery">gallery.php</filename>
		<folder>form</folder>
	</files>		
	<config>
        <fields name="params">
			<fieldset name="basic">						
				<field
					name="thumb_width"
					type="text"
					label="Thumb width"
					default="150"					
				/>
				<field
					name="thumb_height"
					type="text"
					label="Thumb height"					
					default="150"					
				/>
			</fieldset>
        </fields>
    </config>		
</extension>
