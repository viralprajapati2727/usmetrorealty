        <field name="city" type="text" class="inputbox" size="50" label="COM_IPROPERTY_CITY" description="" required="true" />
        <field name="locstate" type="locstate" class="inputbox" size="1" label="COM_IPROPERTY_STATE" description="" required="true"/>
