<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_OSDOWNLOADS_FILE_VIEW_DEFAULT_TITLE">
		<message>
			<![CDATA[COM_OSDOWNLOADS_FILE_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>

	<fields name="request">
        <fieldset name="request">
            <field name="id"
                   type="modal_document"
                   label="COM_OSDOWNLOADS_FILE"
                   size="1"
                   default=""
            />
        </fieldset>
    </fields>

	<fields name="params">
		<fieldset name="basic" label="COM_OSDOWNLOADS_OPTIONS" addfieldpath="/components/com_osdownloads/models/fields">
			<field name="show_download_count"
				type="radio"
				default="0"
				label="COM_OSDOWNLOADS_SHOW_DOWNLOAD_COUNT"
				class="btn-group">

				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>

			<field name="show_category"
				type="radio"
				default="0"
				label="COM_OSDOWNLOADS_SHOW_CATEGORY"
				class="btn-group">

				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
		</fieldset>
	</fields>
</metadata>
