<?xml version="1.0" encoding="utf-8"?>

<form>

  <fieldset name="details">

	<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" 
		readonly="true" class="readonly" />

	<field name="title" type="text"
		label="COM_OKEYDOC_FOLDER_TITLE_LABEL"
		description="COM_OKEYDOC_FOLDER_TITLE_DESC"
		class="input-xxlarge input-large-text"
		size="40" required="true" />

	<field name="symlink_option" type="checkbox" 
		label="COM_OKEYDOC_SYMLINK_OPTION_LABEL"
		description="COM_OKEYDOC_SYMLINK_OPTION_DESC"
		class="inputbox" default="0" />

	<field name="symlink_path" type="text"
		label="COM_OKEYDOC_FIELD_SYMLINK_PATH_LABEL"
		description="COM_OKEYDOC_FIELD_SYMLINK_PATH_DESC"
		required="false" />

	<field name="files" type="text" label="COM_OKEYDOC_FIELD_FILES_LABEL" 
		description="COM_OKEYDOC_FIELD_FILES_DESC"
		readonly="true" default="0" class="readonly" />

	<field name="created" type="calendar" class="readonly"
		label="COM_OKEYDOC_FIELD_FOLDER_CREATION_LABEL"
		description="COM_OKEYDOC_FIELD_FOLDER_CREATION_DESC"
		readonly="true"
		format="%Y-%m-%d %H:%M:%S"
		size="22" filter="user_utc" />

	<field name="modified" type="calendar" class="readonly"
		label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_OKEYDOC_FIELD_MODIFIED_DESC"
		size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

	<field name="modified_by" type="user"
		label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		class="readonly" readonly="true"
		filter="unset" />

	<field name="is_symlink" type="hidden" value="0" />
	<field name="checked_out" type="hidden" filter="unset" />
	<field name="checked_out_time" type="hidden" filter="unset" />
  </fieldset>
</form>

